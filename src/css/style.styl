// Import all partials
@require './_*.styl'


html
  background linear-gradient(0deg, red 0%, darkblue 100%);
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center;

body
  min-height 100vh
  min-width 100vw
  font-family Raleway, sans-serif
  overflow-x hidden


#main
  display flex
  flex-direction: column
  width 600px
  min-height 100vh
  height 100%
  max-height 100%
  margin auto
  align-items: center

.logoutBtn
  background: offdarkblue
  border none
  border-bottom: 4px solid red
  font-size: font-m-d
  font-weight: 700
  font-style: italic
  color: white
  text-align: center
  width: 160px
  height: 50px
  margin-top: 6rem
  margin-bottom: 6rem
  // position: absolute
  // top 0
  // left 0


// Media Queries

@media (max-width 600px)
  body
    min-height 140vh
    min-width 100vw
    margin 0
    padding 0
  #main
    width: 100%
    height 100%